<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top serfhedding">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Feed")'>
                    <img class="logo-style" src='@Url.Content("~/Content/Images/SURF.RU.png")' />
                </a>
             </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right nick">

                    @if (Session["UserId"] != null)
                    {
                        <li>
                            @{

                                var photo = Session["Photo"];
                                
                                if (photo != null)
                                {
                                    <img src=@Url.Content(photo.ToString()) class="nick-photo"/>
                                 }
                              }

                            @Session["Nickname"]

                            <a href="@Url.Action("Logout", "Home")" style="display: inline-block; padding: 0;"><img class="exit-buttom" src='@Url.Content("~/Content/Images/exit.png")' /></a>
                        </li>
                    }
                    else
                    {
                        
                        //показываем две кнопки вход и регистрация
                        <li>@Html.ActionLink("Войти", "Index", "Home")</li>
                        <li>@Html.ActionLink("Регистрация", "Index", "Register")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
